@model dynamic

@{
    ViewData["Title"] = "StoreDetails";
}

<h1>StoreDetails</h1>

<p>
    <a asp-action="StoreInventoryCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Store.storeInventory)
        {
            <tr>
                <td>
                    @Model.Products[item.ProductId].Name
                </td>
                <td>
                    @Model.Products[item.ProductId].Price
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditInventory", new { id = item.Id })
                    @Html.ActionLink("Delete", "DeleteInventory", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
